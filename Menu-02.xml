<theme>
   <formatVersion>7</formatVersion>

     <view name="system">

     <carousel name="systemcarousel">
		<type>vertical</type>
		<pos>0.005 0</pos>
		<size>1 1</size>
		<origin>0 0</origin>
		<color>00000000</color>
		<logoSize>0.16 0.16</logoSize>
		<logoAlignment>left</logoAlignment>
		<maxLogoCount>7</maxLogoCount>
		<defaultTransition>instant</defaultTransition>	
		<zIndex>50</zIndex>
	 </carousel>

	<image name="controllers" extra="true">
		<visible>false</visible>  
        </image>

     <text name="systemInfo">
	    <glowColor>000000</glowColor>
        <pos>0 0.9</pos>
        <backgroundColor>00000000</backgroundColor>
        <color>ffffff</color>
        <fontPath>./_inc/fonts/.ttf</fontPath>
	    <fontSize>0.040</fontSize>
        <zIndex>999</zIndex>
     </text> 

 	  <image name="menu2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/menu2.png</path>
		 <color>ffffff</color>
         <zIndex>998</zIndex>          
      </image> 
	  
 	  <image name="neonsmokebg" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/neonsmokebg.png</path>
		 <color>ffffff</color>
         <zIndex>1</zIndex>          
      </image> 

 	  <image name="menu2overlay" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/menu2overlay.png</path>
		 <color>ffffff</color>
         <zIndex>2</zIndex>          
      </image> 

	<image name="menu1frame" extra="true">
		<visible>false</visible>  
        </image>

	<image name="menu3" extra="true">
		<visible>false</visible>  
        </image>

	<image name="menu6" extra="true">
		<visible>false</visible>  
        </image>

	  <image name="wallpaper1" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
		 <path>./default/_inc/wall.jpg</path>
         <path>./_inc/wallpaper1/${system.theme}.jpg</path>
		 <zIndex>1</zIndex>
     </image>

	       <helpsystem name="help">
	 <iconColor>FFFFFF</iconColor>
     <fontSize>0.022</fontSize>
     <origin>0.5 0.5</origin>
     <pos>0.5 0.99</pos>
     <fontPath>./_inc/.ttf</fontPath>
     </helpsystem>
	
		
      <video name="backgroundvideo" extra="true">
        <visible>true</visible>
        <path>{random}</path>            
        <pos>0.525 0.5</pos>
        <origin>0.5 0.5</origin>
        <size>0.47 0.784</size>
        <delay>0.3</delay>
        <showSnapshotNoVideo>false</showSnapshotNoVideo>
        <showSnapshotDelay>false</showSnapshotDelay>
        <color>FFFFFF</color>
        <storyboard>
        <animation property="y" from="0.05" begin="0" duration="350" mode="easeOut"/>
        <animation property="opacity" from="0" to="1" duration="350" mode="easeIn"/>
        <animation property="scale" from="0" to="1" duration="350" mode="easeOut"/>
        </storyboard>
        <zIndex>20</zIndex>
     </video>

     </view>
     </theme>
